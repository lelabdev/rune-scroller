{
	"name": "rune-scroller",
	"version": "0.0.1",
	"description": "Lightweight, high-performance scroll animations for Svelte 5. ~2KB bundle, zero dependencies.",
	"type": "module",
	"sideEffects": false,
	"license": "MIT",
	"author": {
		"name": "ludoloops",
		"url": "https://lelab.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ludoloops/rune-scroller"
	},
	"keywords": [
		"svelte",
		"svelte5",
		"animations",
		"scroll-animations",
		"scroll-trigger",
		"intersection-observer",
		"lightweight",
		"performance"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./animations.css": "./dist/animations.css"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prepublishonly": "pnpm run check && pnpm run build",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.36.0",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.43.2",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@types/node": "^22",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.39.5",
		"svelte-check": "^4.3.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.1",
		"vite": "^7.1.7",
		"vitest": "^3.2.4"
	}
}
